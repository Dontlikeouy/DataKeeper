<Window x:Class="DataKeeper.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DataKeeper"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Margin="5">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>

        </Grid.RowDefinitions>
        <StackPanel Margin="0 0 0 10">
            <TextBox Text="Сущность:" FontSize="14"/>
            <ComboBox x:Name="Entity" SelectionChanged="Entity_SelectionChanged"/>
        </StackPanel>

        <ContentControl x:Name="MyContentControl" Grid.Row="1"/>


    </Grid>
</Window>
